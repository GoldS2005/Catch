<Window x:Class="Catch.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Catch"
        mc:Ignorable="d"
        Title="OrderWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Order Number: "/>
            <TextBlock x:Name="orderNumberLabel"/>
            <TextBlock Text="  |  Order Total: "/>
            <TextBlock x:Name="orderTotalLabel"/>
        </StackPanel>
        <ListView x:Name="orderItemsListView" Grid.Row="1" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding ProductName}" Grid.Column="0"/>
                        <TextBlock Text="{Binding Quantity}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="deleteButton" Grid.Row="2" Content="Delete" HorizontalAlignment="Right" Margin="10"
                Click="DeleteButton_Click"/>
        <Button x:Name="finishOrderButton" Grid.Row="2" Content="Finish Order" HorizontalAlignment="Right" Margin="10"
                Click="FinishOrderButton_Click"/>
    </Grid>
</Window>
